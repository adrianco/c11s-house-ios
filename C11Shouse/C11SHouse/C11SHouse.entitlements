<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- WeatherKit Entitlement -->
    <key>com.apple.developer.weatherkit</key>
    <true/>
    
    <!-- Location Services - removed always authorization as it requires special approval -->
    <!-- Using "when in use" authorization is sufficient for this app -->
    
    <!-- App Sandbox (required for macOS) -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- Network access (required for WeatherKit) -->
    <key>com.apple.security.network.client</key>
    <true/>
</dict>
</plist>